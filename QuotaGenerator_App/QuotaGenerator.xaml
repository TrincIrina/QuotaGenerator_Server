<Window x:Class="QuotaGenerator_App.QuotaGenerator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuotaGenerator_App"
        mc:Ignorable="d"
        Title="QuotaGenerator" FontSize="15" FontFamily="Consales" Background="FloralWhite"  
        Height="215" MinHeight="215" MaxHeight="215"
        Width="600" MinWidth="600" MaxWidth="600">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Content="A random..." Margin="5" Foreground="Blue"/>
            <Label x:Name="StatusLabel" Margin="5" Foreground="Blue"/>
        </StackPanel>
        <TextBox x:Name="QuotaTextBox" Height="60" Margin="5" 
                 TextWrapping="Wrap" Background="FloralWhite" 
                 Foreground="LightSeaGreen"/>        
        <Button x:Name="ExitButton" Content="Return to the menu..." 
                Height="30" Width="200" Foreground="Blue" HorizontalAlignment="Center" 
                Margin="5" Click="ExitButton_Click"/>
    </StackPanel>
</Window>
